
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>SkyRoute</title>
<link rel="icon" href="https://cdn-icons-png.flaticon.com/512/723/723955.png">
<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"/>
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">

<style>
body {
    margin: 0;
    font-family: "Poppins", sans-serif;
    color: white;
    overflow-x: hidden;
    background: linear-gradient(-45deg, #0f2027, #203a43, #2c5364, #1a2a6c);
    background-size: 400% 400%;
    animation: gradientMove 12s ease infinite;
}

/* Background animation */
@keyframes gradientMove {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
}

/* Floating glow circles */
.circle {
    position: fixed;
    border-radius: 50%;
    background: rgba(255,255,255,0.05);
    animation: float 15s infinite ease-in-out;
    z-index: 0;
}
.circle1 { width: 220px; height: 220px; top: 8%; left: 5%; }
.circle2 { width: 300px; height: 300px; bottom: 10%; right: 10%; }

@keyframes float {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-25px); }
    100% { transform: translateY(0px); }
}

/* Navbar */
.navbar {
    padding: 18px 50px;
    background: rgba(0,0,0,0.3);
    backdrop-filter: blur(8px);
    position: relative;
    z-index: 2;
}

.navbar a {
    color: white;
    text-decoration: none;
    font-weight: 600;
    position: relative;
}

.navbar a::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: -4px;
    width: 0%;
    height: 2px;
    background: #00e0ff;
    transition: 0.3s;
}

.navbar a:hover::after {
    width: 100%;
}

/* Hero */
.hero {
    text-align: center;
    padding: 70px 20px 20px;
    position: relative;
    z-index: 2;
}

.typing {
    overflow: hidden;
    white-space: nowrap;
    border-right: 2px solid #00e0ff;
    width: 0;
    animation: typing 3s steps(30) forwards, blink 0.7s infinite;
    font-size: 40px;
    font-weight: 700;
}

@keyframes typing {
    to { width: 100%; }
}

@keyframes blink {
    50% { border-color: transparent; }
}

.hero p {
    opacity: 0.8;
    margin-top: 12px;
}

/* Card */
.search-card {
    background: rgba(255,255,255,0.08);
    backdrop-filter: blur(12px);
    padding: 35px;
    border-radius: 20px;
    max-width: 500px;
    margin: 40px auto;
    box-shadow: 0 25px 60px rgba(0,0,0,0.4);
    transition: 0.3s;
    position: relative;
    z-index: 2;
}

.search-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 0 40px rgba(0,224,255,0.4);
}

select {
    width: 100%;
    padding: 14px;
    margin: 12px 0;
    border-radius: 12px;
    border: none;
}

/* Button with shine */
button {
    width: 100%;
    padding: 14px;
    border-radius: 30px;
    border: none;
    background: linear-gradient(90deg, #00c6ff, #0072ff);
    color: white;
    font-weight: 600;
    cursor: pointer;
    position: relative;
    overflow: hidden;
}

button::after {
    content: "";
    position: absolute;
    top: 0;
    left: -75%;
    width: 50%;
    height: 100%;
    background: rgba(255,255,255,0.3);
    transform: skewX(-20deg);
}

button:hover::after {
    animation: shine 0.7s forwards;
}

@keyframes shine {
    100% { left: 125%; }
}

/* Summary */
.summary-card {
    background: rgba(255,255,255,0.1);
    backdrop-filter: blur(10px);
    border-radius: 20px;
    padding: 30px;
    max-width: 520px;
    margin: 40px auto;
    box-shadow: 0 25px 60px rgba(0,0,0,0.4);
    animation: fadeUp 0.6s ease;
    position: relative;
    z-index: 2;
}

.summary-card strong {
    color: #00e0ff;
}
.options {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin: 30px auto;
    max-width: 900px;
    z-index: 2;
    position: relative;
}

.option-card {
    background: rgba(255,255,255,0.1);
    backdrop-filter: blur(10px);
    padding: 20px;
    width: 220px;
    text-align: center;
    border-radius: 15px;
    cursor: pointer;
    transition: 0.3s;
    box-shadow: 0 10px 30px rgba(0,0,0,0.3);
}

.option-card:hover {
    transform: translateY(-6px);
}

.option-card.active {
    border: 2px solid #00e0ff;
}

.flight-cards {
    display: flex;
    justify-content: center;
    gap: 25px;
    margin: 40px auto;
    max-width: 1000px;
    flex-wrap: wrap;
}

.flight-card {
    background: rgba(255,255,255,0.1);
    backdrop-filter: blur(12px);
    border-radius: 20px;
    padding: 25px;
    width: 260px;
    text-align: center;
    box-shadow: 0 15px 40px rgba(0,0,0,0.3);
    transition: 0.3s;
}

.flight-card:hover {
    transform: translateY(-8px);
}

.flight-card img {
    height: 40px;
    margin-bottom: 10px;
}

.flight-number {
    opacity: 0.8;
    margin-bottom: 15px;
}

.flight-info {
    display: flex;
    justify-content: space-between;
    margin: 15px 0;
    font-size: 14px;
}

.flight-info div {
    text-align: center;
}

.flight-info span {
    display: block;
    opacity: 0.7;
    font-size: 12px;
}

.select-btn {
    margin-top: 10px;
}



/* Map */
#map {
    height: 450px;
    width: 90%;
    margin: 40px auto;
    border-radius: 20px;
    box-shadow: 0 25px 60px rgba(0,0,0,0.5);
    animation: fadeUp 0.6s ease;
    position: relative;
    z-index: 2;
}

/* Spinner */
.spinner {
    display: none;
    text-align: center;
    position: relative;
    z-index: 2;
}

.spinner.active {
    display: block;
}

/* Animations */
@keyframes fadeUp {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
}
</style>
</head>

<body>

<div class="circle circle1"></div>
<div class="circle circle2"></div>

<div class="navbar">
    <a href="/">‚úàÔ∏è SKY-ROUTE</a>
</div>

<div class="hero">
    <h1 class="typing">Fly Smarter. Travel Faster.</h1>
    <p>Plan the best route across cities instantly</p>
</div>

<div class="search-card">
<form method="post" action="/route">
    <label>Source</label>
    <select name="source" required>
        <option value="" disabled <%= !source ? "selected" : "" %>>
            Select Source
        </option>
        <% airports.forEach(airport => { %>
            <option value="<%= airport %>" 
                <%= source === airport ? "selected" : "" %>>
                <%= airport %>
            </option>
        <% }) %>
    </select>

    <label>Destination</label>
    <select name="destination" required>
        <option value="" disabled <%= !destination ? "selected" : "" %>>
            Select Destination
        </option>
        <% airports.forEach(airport => { %>
            <option value="<%= airport %>" 
                <%= destination === airport ? "selected" : "" %>>
                <%= airport %>
            </option>
        <% }) %>
    </select>

    <button type="submit">Find Flight</button>
</form>
</div>

<div id="loading" class="spinner">
    ‚úàÔ∏è Finding best flight...
</div>
<% if (error) { %>
    <p style="color:#ff6b6b; text-align:center; font-weight:600;">
        <%= error %>
    </p>
<% } %>

<<% if (path) { %>

<div class="summary-card">
    <h2><%= path[0] %> ‚Üí <%= path[path.length - 1] %></h2>
    <p><strong>Total Distance:</strong> <%= cost %> km</p>
    <p><strong>Route:</strong> <%= path.join(" ‚Üí ") %></p>

    <form method="post" action="/route" style="margin-top:15px;">
        <input type="hidden" name="source" value="<%= destination %>">
        <input type="hidden" name="destination" value="<%= source %>">
        <button type="submit">üîÅ Reverse Route</button>
    </form>
</div>

<!-- Airline cards -->
<% if (flightOptions && flightOptions.length > 0) { %>
<div class="flight-cards">
    <% flightOptions.forEach(flight => { %>
        <div class="flight-card">

            <h3><%= flight.airline %></h3>
            <p class="flight-number"><%= flight.flightNumber %></p>

            <div class="flight-info">
                <div>
                    <span>Duration</span>
                    <strong><%= flight.duration %></strong>
                </div>
                <div>
                    <span>Distance</span>
                    <strong><%= flight.distance %> km</strong>
                </div>
                <div>
                    <span>Fare</span>
                    <strong><%= flight.fare %></strong>
                </div>
            </div>

        </div>
    <% }) %>
</div>
<% } %>



<div id="map"></div>

<% } %>



<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
<script>
document.addEventListener("DOMContentLoaded", function () {

    const routeCoordinates = JSON.parse('<%- JSON.stringify(coordinates || []) %>');
    const routeCities = JSON.parse('<%- JSON.stringify(path || []) %>');

    if (routeCoordinates.length > 0) {

        const map = L.map("map").setView(routeCoordinates[0], 5);

        L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png", {
            attribution: "¬© OpenStreetMap contributors"
        }).addTo(map);

        const routeLine = L.polyline(routeCoordinates, {
            color: "#00e0ff",
            weight: 6,
            opacity: 0.9
        }).addTo(map);

        map.fitBounds(routeLine.getBounds());

        setTimeout(() => {
            map.invalidateSize();
        }, 200);

        routeCoordinates.forEach((coord, index) => {
            let markerOptions = {};

            if (index === 0) {
                markerOptions.icon = L.icon({
                    iconUrl: "https://maps.google.com/mapfiles/ms/icons/green-dot.png",
                    iconSize: [32, 32],
                    iconAnchor: [16, 32]
                });
            }

            else if (index === routeCoordinates.length - 1) {
                markerOptions.icon = L.icon({
                    iconUrl: "https://maps.google.com/mapfiles/ms/icons/red-dot.png",
                    iconSize: [32, 32],
                    iconAnchor: [16, 32]
                });
            }

            const marker = L.marker(coord, markerOptions).addTo(map);
            marker.bindTooltip(routeCities[index]);
        });
    }
});

// Spinner
const form = document.querySelector("form");
const spinner = document.getElementById("loading");
if (form) {
    form.addEventListener("submit", () => {
        spinner.classList.add("active");
    });
}
</script>
<script>
function selectRoute(type, element) {

    // highlight selected card
    document.querySelectorAll(".option-card")
        .forEach(card => card.classList.remove("active"));

    element.classList.add("active");

    // For now: visual only
    // Later we will connect to real API data
    console.log(type + " route selected");
}
</script>


</body>
</html>